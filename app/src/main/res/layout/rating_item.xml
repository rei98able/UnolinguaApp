<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ratingPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_first_place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/ratingPlaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:textSize="12sp"
        tools:text=""
        android:textColor="@color/black_light"
        app:layout_constraintStart_toStartOf="@id/ratingPlace"
        app:layout_constraintEnd_toEndOf="@id/ratingPlace"
        app:layout_constraintTop_toTopOf="@id/ratingPlace"
        app:layout_constraintBottom_toBottomOf="@id/ratingPlace"
        />

    <ImageView
        android:id="@+id/ratingProfilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_blue_ellipse"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/ratingPlaceText"
        app:layout_constraintBottom_toBottomOf="@id/ratingPlaceText"
        app:layout_constraintStart_toEndOf="@id/ratingPlaceText"
        />

    <TextView
        android:id="@+id/ratingProfilePhotoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        tools:text="A"
        app:layout_constraintStart_toStartOf="@id/ratingProfilePhoto"
        app:layout_constraintEnd_toEndOf="@id/ratingProfilePhoto"
        app:layout_constraintTop_toTopOf="@id/ratingProfilePhoto"
        app:layout_constraintBottom_toBottomOf="@id/ratingProfilePhoto"
        />

    <TextView
        android:id="@+id/ratingUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="Andrew Chernyshev"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/ratingProfilePhoto"
        app:layout_constraintTop_toTopOf="@id/ratingProfilePhoto"
        app:layout_constraintBottom_toBottomOf="@id/ratingProfilePhoto"
        />

    <TextView
        android:id="@+id/ratingPointsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_light"
        android:textSize="12sp"
        android:textColor="@color/grey_ultra_hard"
        android:text="@string/fragment_lesson_default_value"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/ratingPoints"
        app:layout_constraintTop_toTopOf="@id/ratingUserName"
        app:layout_constraintBottom_toBottomOf="@id/ratingUserName"
        />

    <TextView
        android:id="@+id/ratingPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_light"
        android:textSize="12sp"
        android:textColor="@color/grey_ultra_hard"
        android:text="@string/rating_points"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ratingProfilePhoto"
        app:layout_constraintBottom_toBottomOf="@id/ratingProfilePhoto"
        />




</androidx.constraintlayout.widget.ConstraintLayout>