<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/chooseLanguageChooseYour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_language_your"
        android:fontFamily="@font/rubik_medium"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/chooseLanguageChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_language_your"
        android:fontFamily="@font/rubik_medium"
        android:textSize="14sp"
        android:textColor="@color/grey_hard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chooseLanguageChooseYour"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chooseLanguageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/choose_language_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/chooseLanguageChange"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>